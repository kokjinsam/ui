    "react-cosmos-plugin-vite": "6.2.4-canary.b2d1977.0",
    "svgo": "^3.3.2",
    "tailwindcss": "^4.1.3",
    "typescript": "^5.8.3",
    "vite": "^6.2.6"
  }
