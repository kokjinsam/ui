  },
  "files": [
    "dist"
  ],
  "keywords": [
    "components",
    "ui",
    "tailwind",
    "react-aria"
  ],
  "type": "module",
  "source": "src/index.tsx",
  "exports": {
    "require": "./dist/index.cjs",
    "default": "./dist/index.modern.js"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.module.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "microbundle --jsx React.createElement --jsxFragment React.Fragment --format modern,es,cjs",
