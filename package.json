    "deploy": "microbundle --jsx React.createElement --jsxFragment React.Fragment --format modern,es,cjs",
    "cosmos": "cosmos",
    "cosmos-export": "cosmos-export"
  },
  "peerDependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
